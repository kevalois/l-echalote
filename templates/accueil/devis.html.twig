{% extends 'base.html.twig' %}

{% block body %}


<div class="container" style="color: rgb(145,119,37);">
      <h2 class="text-center" style="padding-bottom: 40px;padding-top: 20px;">Demande de devis personnalis√©</h2>
        {{ form_start(devisForm) }}
        <div class="form-row">
          <div class="form-group col-md-6">
            {{ form_row(devisForm.nom) }}
          </div>
          <div class="form-group col-md-6">
            {{ form_row(devisForm.email) }}
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            {{ form_row(devisForm.telephone) }}
          </div>
          <div class="form-group col-md-6">
            {{ form_row(devisForm.nombrePersonne) }}
          </div>
        </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              {{ form_row(devisForm.date) }}
            </div>
            <div class="form-group col-md-6">
              {{ form_row(devisForm.typeEvenement) }}
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              {{ form_row(devisForm.message) }}
            </div>
          </div>
          <div class="form-row">
            {{ form_row(devisForm.donne) }}
          </div>
          <button  type='submit' id='btn_reservation'>Envoyer votre demande</button>
          {{ form_end(devisForm) }}
</div>

{% for message in app.flashes('message') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}




