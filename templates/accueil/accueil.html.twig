{% extends 'base.html.twig' %}

{% block body %}

<!--ALERTE-->
{% for warning in alertes %}
<div class="alert alert-danger text-center" role="alert" style="background-color: rgba(255,0,23,0.76);padding-bottom: 12px;margin-bottom: 0px;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <span style="color: #1c0003;">{{warning.alerte|raw}}</span>
</div>
{% endfor %}


<!--PLAT DU JOUR-->
<body id="background_img" style="font-family: Almarai, sans-serif;font-size: 14px;">
    <section class="d-flex float-none flex-column" id="accueil" style="height: 934px;">
        
        <div id="logo-ardoise" style="margin-top: 20px;">
            <div class="container" style="height: 380px;">
                <div class="row" style="padding: 20px;padding-right: 0;padding-left: 0;padding-top: 15px;height: 603px;">
                    <div class="col-lg-7 col-xl-8 offset-lg-0 offset-xl-0 d-flex flex-column justify-content-around" data-aos="fade-right" data-aos-duration="1000" data-aos-delay="1000">
                        <div id="logo" style="background: url(img/Logo_echalote_entier.png) center / contain no-repeat;width: 100%;height: 10;"></div>
                        <p id="p_accroche">“Mange de façon à manger ce que tu manges, et non pas de manière à être dévoré par ta nourriture.”<br></p>
                    </div>
                    <div class="col offset-lg-0 d-flex flex-column justify-content-between" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="1000" data-aos-once="true" id="ardoise">
                        {% for plat in platDuJour %}
                            <p>{{plat.date|date("d/m/Y")}}</p>
                            <p>{{plat.plat|raw}}</p>
                        <a class="d-flex d-lg-flex flex-row justify-content-center align-self-center justify-content-xl-center" data-toggle="modal" data-bs-tooltip="" id="btn_reservation" href="#modal_reservation" style="margin-bottom: 10px;">RESERVATION</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div data-bs-parallax-bg="true" id="parallax" style="height: 450px;background: url(img/Bouchon.jpg) center / cover;background-color: #ffffff;"></div>

<!--EVENEMENT-->

    <div class="container" id="evenement">
        <div class="intro">
            <h2 class="text-center" id="heading" style="padding-bottom: 40px;padding-top: 20px;">Evenement à venir</h2>
            <div></div>
            {% for evenement in evenements %}
            <div class="card" data-aos="fade-up" data-aos-duration="600" data-aos-delay="100" id="card_evenement"  style="margin-bottom: 30px">
                <div class="card-body d-flex flex-column">
                    
                        <h4 class="d-xl-flex justify-content-xl-center card-title">{{ evenement.titre }}</h4>
                        <h6 class="text-muted d-xl-flex justify-content-xl-end card-subtitle mb-2">{{ evenement.date|date("d/m/Y") }}</h6>
                        <p class="card-text">{{ evenement.descriptif|raw }}</p>
                        <a class="card-link d-flex d-lg-flex flex-row justify-content-center align-self-end justify-content-xl-center" data-toggle="modal" data-bs-tooltip="" id="btn_reservation" href="#modal_reservation">RESERVATION</a>
                    
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

<!--CAROUSEL-->

<div class="container" style="padding-bottom: 50px;padding-top: 50px;">
    <div class="carousel slide" data-ride="carousel" data-aos="fade-down" data-aos-duration="600" data-aos-delay="300" id="carousel" >
        <div class="carousel-inner" role="listbox" data-aos="fade">
            {% for image in images %}
            <div class="carousel-item{% if loop.first %} active {% endif %}">
                <img class="rounded mx-auto d-block" src="{{ vich_uploader_asset(image, 'imageFile')}}" alt="Slide Image" style="height: 500px">
            </div>
            {% endfor %}
        </div>
        <div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>




